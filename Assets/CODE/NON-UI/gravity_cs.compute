{
    float2 position;
    float2 localCenterOfMass;
    float mass;

    /*
    LOD Sizes:
    0: 0.5x0.5
    1: 2x2     (x4)
    2: 4x4     (x2)
    3: 8x8     (x2)
    4: 16x16   (x2)
    5: 32x32   (x2)
    */

};

